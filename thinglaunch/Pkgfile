# Description:  simple launcher
# URL:  http://git.r-36.net/thinglaunch/
# Maintainer:  piecesofquiet < jbloomfield at live dot com>

name=thinglaunch
version=2.4
release=1
source=(http://git.r-36.net/$name/snapshot/$name-$version.tar.gz)

build() {
    cd $name-$version

    make
    make DESTDIR=$PKG \
        PREFIX=/usr \
        MANDIR=/usr/man\
        install
}
# vim: set ft=sh ts=4 et:

